---
import HeaderInfo from "./HeaderInfo.astro";
import HeaderTitle from "./HeaderTitle.astro";
import MainNav from "./MainNav.astro";
---

<style>
  header {
    position: sticky;
    display: flex;
    justify-content: space-between;
    padding: 1em 1em;
    border-bottom: 4px solid var(--theme-primary-border-color);

    @media only screen and (min-width: 48rem) {
      flex-direction: column;
      width: fit-content;
      margin: auto;
    }
  }
</style>
<header>
  <HeaderInfo />
  <HeaderTitle />
  <MainNav />
</header>
