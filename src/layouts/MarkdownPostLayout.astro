---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<style>
  article {
    margin: auto;
    width: clamp(10em, 82vw, 66em);

    h1,
    h2,
    h3 {
      margin-bottom: 0;
    }
    img {
      width: 100%;
      height: auto;
    }

    .astro-code {
      padding: 1em;
    }
  }
</style>
<BaseLayout title={frontmatter.title}>
  <article>
    <h1>{frontmatter.title}</h1>
    <slot />
  </article>
</BaseLayout>
