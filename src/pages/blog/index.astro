---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("./*.md");
---

<BaseLayout title="Justin Bird | Blog">
  <h1>Blog</h1>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
