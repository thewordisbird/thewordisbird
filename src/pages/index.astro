---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import headShot from "../assets/images/justin-bird-headshot.jpg";
---

<style>
  .container {
    width: 100%;
  }
  .row {
    display: flex;
    margin: 1em 0;
    gap: 1em;
  }

  .row__item {
    border: 4px solid var(--color-black);
    box-shadow: 5px 5px var(--color-slate);
    padding: 0.5em 0.5em 2em 0.5em;
  }

  h2 {
    text-transform: uppercase;
    text-shadow: 1px 1px var(--color-slate);
    margin: 0;
    display: block;
  }

  .section {
    display: inline-block;
    margin-right: 0.5em;
  }

  .intro {
    flex-basis: 67%;
    display: flex;
    gap: 2em;
    justify-content: center;
    align-items: center;

    & img {
      border: 4px solid var(--color-black);
      border-radius: 50%;
    }

    & .intro__message {
      & p {
        margin-top: 0.5em;
      }
    }
  }

  .contact {
    flex-grow: 1;

    & h4 {
      margin: 0 0 0.5em 0;
    }

    & ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    & li {
      margin: 0.25em;
      color: var(--color-black);
    }

    & a {
      text-decoration: none;
      color: inherit;
      font-weight: 400;
      &:hover {
        text-decoration: underline;
      }
    }
  }

  .blog {
    flex-grow: 1;
    min-height: 200px;
  }
</style>
<BaseLayout title="Justin Bird | Home">
  <secion class="row">
    <article class="row__item intro">
      <Image src={headShot} alt="Justin Bird" width="200" />
      <div class="intro__message">
        <h2>Hello, I'm Justin...</h2>
        <p>
          a web developer and general coding hobbist. Follow along as I work
          through interesting projects and learn new things!
        </p>
      </div>
    </article>
    <article class="row__item contact">
      <h2>Get In Touch</h2>
      <p>
        Need something build?<br />
         Have questions about a blog post?<br />
         Just want to say hi?
      </p>
      <h4>Justin Bird</h4>
      <ul>
        <li>
          <a href="mailto: justin.h.bird@gmail.com">
            <i class="fa-solid fa-envelope"></i>
             justin.h.bird@gmail.com
          </a>
        </li>
        <li>
          <a
            href="https://www.github.com/thewordisbird"
            rel="noopener noreferrer"
            target="_blank"
          >
            <i class="fa-brands fa-square-github"></i>
             @thewordisbird
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/thewordisbird"
            rel="noopener noreferrer"
            target="_blank"
          >
            <i class="fa-brands fa-linkedin"></i>
             @thewordisbird
          </a>
        </li>
      </ul>
    </article>
  </secion>
  <section>
    <h2 class="section">Recent Posts</h2><a href="/blog">see all post...</a>
    <div class="row">
      <article class="row__item blog">
        <h3>Placeholder Blog Post: Post 1</h3>
      </article>
